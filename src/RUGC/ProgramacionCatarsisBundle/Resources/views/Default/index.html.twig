<div id="menubar" class="s">
    <nav>
        <ul class="menu-horizontal">
            {%  for opcion in entities %}
                {% if opcion.nombreOpcion == 'programacion:radio/tv'%}
                    <li class="prin"><a href="" title="Texto">{{opcion.nombreOpcion}}</a>
                        <ul>        
                            <li><a href="{{path('programacion')}}"> PROGRAMACION ACTUAL</a></li>
                            <li><a href=""> BUSCAR</a></li>
                                {% if is_granted('ROLE_ADMIN') %}
                                <li><a href ="{{path('programacion_selectMonth')}}" title = "Texto">EDITAR</a></li>
                                {% endif %}

                        </ul>
                    </li>
                {% elseif opcion.nombreOpcion == 'Administrar' %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="prin"><a href="" title="Texto">{{opcion.nombreOpcion}}</a>
                            <ul>
                                <li><a href="{{path('contenido_new')}}">AGREGAR CONTENIDO</a></li>
                                <li><a href="{{path('comentario')}}"> REVISAR COMENTARIOS </a></li>
                            </ul>
                        </li>
                    {% endif %}
                {% else %}
                    <li class="prin"><a href="{{path(opcion.ruta, {'id':opcion.id})}}" title="Texto">{{opcion.nombreOpcion}}</a></li>

                {% endif%}
            {% endfor%}
        </ul>
    </nav>
</div> <!-- FIN DEL MENU -->