{% extends '::base.html.twig' %}
{% trans_default_domain "RUGCProgramacionCatarsisBundle" %}

{% block body -%}
    <form action="{{path('programacion_update',{'id':entity.id})}}" method="POST"  {{ form_enctype(edit_form) }} >
         <h1>{{ "form.Titulo.titulo_Editar_Programacion"|trans }}</h1>

        <div class="validaciones">
            {{form_row(edit_form.tipo)}}
            {{ form_row(edit_form.fecha, {'attr': {'novalidate': 'true'}}) }}
            {{ form_row(edit_form.titulo, {'attr': {'novalidate': 'true'}}) }}
            {{ form_row(edit_form.obra, {'attr': {'novalidate': 'true'}}) }}
            {{ form_row(edit_form.descripciones, {'attr': {'novalidate': 'true'}}) }}
            {{ form_row(edit_form.descripcionen, {'attr': {'novalidate': 'true'}}) }}

            <div>
                {{ form_row(edit_form.imagen, {'attr': {'novalidate': 'true'}}) }}
                {% if entity.path %}
                    <img class="imagenEdit" src="{{asset('uploads/documents/'~entity.path)}} " width="100" height="100"  />
                    <a style="margin-right: 20px;" href="{{ path('programacion_delete_imagen', { 'id': entity.id }) }}">Eliminar Im√°gen</a>
                {% endif %}
            </div>

            {{ form_rest(edit_form, {'attr': {'novalidate': 'true'}})}}

        </div>
    </form>
{% endblock %}
