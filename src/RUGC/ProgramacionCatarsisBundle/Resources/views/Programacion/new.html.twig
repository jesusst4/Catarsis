{% extends '::base.html.twig' %}

{% block body -%}
    <h1> Crear Programación {{fecha}}</h1>
    <form action="{{ path('programacion_create')}}" method="POST" {{form_enctype(form)}}>

        <div class="validaciones">
            <input type="hidden" name="fecha" value="{{fecha}}"/>
            {{ form(form) }}
        </div>
    </form>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Título</th>
                <th>Obra</th>
                <th>Descripción</th>

                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for programacion in programaciones %}
                <tr>
                    <td>{% if programacion.fecha %}{{ programacion.fecha|date('d-m-Y') }}{% endif %}</td>
                    <td>{{ programacion.titulo }}</td>
                    <td>{{ programacion.obra }}</td>
                    <td>{{ programacion.descripcion }}</td>
                    <td>
                        <a style="margin-right: 20px;" href="{{ path('programacion_delete', { 'id': programacion.id }) }}">Eliminar</a>
                        <a href="{{ path('programacion_edit', { 'id': programacion.id }) }}">Editar</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
