{% extends '::base.html.twig' %}
{% trans_default_domain "RUGCProgramacionCatarsisBundle" %}

{% block body -%}
    <h1>{{ "form.Titulo.titulo_Listar_Opciones_Menu"|trans }}</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Opcion de Menú</th>
                <th>Opcion de Menú</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
