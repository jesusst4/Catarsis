{% extends '::base.html.twig' %}

{% block body -%}

    <h1>Encabezado list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Texto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('encabezado_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>

                    {% if  app.request.locale == 'es' %}            
                        <td>{{ entity.textoes }}</td>
                    {% else %}
                        <td>{{ entity.textoen }}</td>
                    {% endif%}

                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('encabezado_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('encabezado_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('encabezado_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>

{% endblock %}
